{
  "parserOptions": {
    "extraFileExtensions": ["json"]
  },
  "compilerOptions": {
    "baseUrl": "./",
    "outDir": "./build/esm",
    "target": "esnext",
    "module": "nodenext",
    "noEmit": false,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "noEmitOnError": false,
    "noImplicitAny": false,
    "declarationMap": true,
    "noUnusedLocals": true,
    "removeComments": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "noUnusedParameters": true,
    "strictFunctionTypes": true,
    "moduleResolution": "nodenext",
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@array": ["./src/array"],
      "@array/*": [ "./src/array/*" ],
      "@boolean": ["./src/boolean"],
      "@boolean/*": [ "./src/boolean/*" ],
      "@collection": ["./src/collection"],
      "@collection/*": [ "./src/collection/*" ],
      "@dom": ["./src/dom"],
      "@dom/*": [ "./src/dom/*" ],
      "@ext": ["./src/ext"],
      "@ext/*": [ "./src/ext/*" ],
      "@log": ["./src/log"],
      "@log/*": [ "./src/log/*" ],
      "@method": ["./src/method"],
      "@method/*": [ "./src/method/*" ],
      "@node": ["./src/node"],
      "@node/*": [ "./src/node/*" ],
      "@number": ["./src/number"],
      "@number/*": [ "./src/number/*" ],
      "@object": ["./src/object"],
      "@object/*": [ "./src/object/*" ],
      "@promise": ["./src/promise"],
      "@promise/*": [ "./src/promise/*" ],
      "@regex": ["./src/regex"],
      "@regex/*": [ "./src/regex/*" ],
      "@string": ["./src/string"],
      "@string/*": ["./src/string/*"],
      "@url": ["./src/url"],
      "@url/*": [ "./src/url/*" ],
      "@validation": ["./src/validation"],
      "@validation/*": [ "./src/validation/*" ]
    }
  },
  "include": ["src/**/*"],
  "exclude": [
    "__tests__",
    "**/__tests__",
    "__tests__/*",
    "**/__tests__/*",
    "__mocks__",
    "**/__mocks__",
    "__mocks__/*",
    "**/__mocks__/*",
    "build",
    "docs",
    "config",
    "scripts",
    "node_modules"
  ]
}


{
  "parserOptions": {
    "extraFileExtensions": ["json"]
  },
  "compilerOptions": {
    "baseUrl": ".",
    "target": "esnext",
    "outDir": "./build",
    "noEmit": false,
    "allowJs": true,
    "sourceMap": true,
    "declaration": true,
    "skipLibCheck": true,
    "noEmitOnError": true,
    "noImplicitAny": false,
    "declarationMap": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "nodenext",
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "paths": {
      "@array": ["./src/array"],
      "@array/*": [ "./src/array/*" ],
      "@boolean": ["./src/boolean"],
      "@boolean/*": [ "./src/boolean/*" ],
      "@collection": ["./src/collection"],
      "@collection/*": [ "./src/collection/*" ],
      "@dom": ["./src/dom"],
      "@dom/*": [ "./src/dom/*" ],
      "@ext": ["./src/ext"],
      "@ext/*": [ "./src/ext/*" ],
      "@log": ["./src/log"],
      "@log/*": [ "./src/log/*" ],
      "@method": ["./src/method"],
      "@method/*": [ "./src/method/*" ],
      "@node": ["./src/node"],
      "@node/*": [ "./src/node/*" ],
      "@number": ["./src/number"],
      "@number/*": [ "./src/number/*" ],
      "@object": ["./src/object"],
      "@object/*": [ "./src/object/*" ],
      "@promise": ["./src/promise"],
      "@promise/*": [ "./src/promise/*" ],
      "@regex": ["./src/regex"],
      "@regex/*": [ "./src/regex/*" ],
      "@string": ["./src/string"],
      "@string/*": ["./src/string/*"],
      "@url": ["./src/url"],
      "@url/*": [ "./src/url/*" ],
      "@validation": ["./src/validation"],
      "@validation/*": [ "./src/validation/*" ],
    }
  },
  "include": [
    "src",
    "index.js"
  ],
  "exclude": [
    "./types",
    "./build",
    "./docs",
    "./config",
    "./scripts",
    "./node_modules",
  ]
}

